<h1>Listing cards</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Order</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.title %></td>
        <td><%= card.body %></td>
        <td><%= card.order %></td>
        <td><%= card.user %></td>
        <td><%= link_to 'Show', project_card_path(@project, card) %></td>
        <td><%= link_to 'Edit', edit_project_card_path(@project, card) %></td>
        <td><%= link_to 'Destroy', project_card_path(@project, card), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
