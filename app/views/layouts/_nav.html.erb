<% if @project and current_user %>
<nav>
<%= link_to "sign out", destroy_user_session_path, :method => :delete %> | 
<%= link_to 'projects', projects_path %> | 
<%= link_to 'add card', project_cards_path(project_id: @project, card: {title: "???", body: "Something brillinat here..."}), {method: :post, remote: :true, class: "button"} %>
</nav>
